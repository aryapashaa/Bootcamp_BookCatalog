@{
	ViewData["Title"] = "Home Page";
	Layout = "_LandingPageLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="icon" href="https://img.icons8.com/ios/256/book.png" type="image/x-icon">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
	@if (User.IsInRole("Admin") || (User.IsInRole("User")))
	{
		@Html.Raw(TempData["msg_login"])
	}else
	{
		@Html.Raw(TempData["msg_register"])
	}
	<div class="container">
		<div class="book-cards gap-3 mb-3" id="book-cards"></div>
	</div>
	<div class="catalog" id="catalog">
	</div>
	@if (!User.IsInRole("Admin") && (!User.IsInRole("User")))
	{
	}
	else
	{
		<!-- Modal -->
		<div class="modal fade" id="modalBook" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h1 class="modal-title fs-5" id="exampleModalLabel">Detail</h1>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
	}
</body>
</html>

@section Scripts{
	<script src="~/js/home.js" asp-append-version="true"></script>
}